//Linguagem C++ -- Tinkercad
//Código de semáforo utilizando 3 leds com um microcontrolador AtTiny
const int red = PB2, yel = PB1, gre = PB0;
void setup(){
  pinMode(red, OUTPUT);
  pinMode(yel, OUTPUT);
  pinMode(gre, OUTPUT);
}
void loop(){
  digitalWrite(yel, LOW);
  digitalWrite(red, HIGH);
  delay(5000);
  digitalWrite(red, LOW);
  digitalWrite(gre, HIGH);
  delay(4000);
  digitalWrite(gre, LOW);
  digitalWrite(yel, HIGH);
  delay(3000);
}
