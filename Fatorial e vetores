#include <stdio.h>
#include <locale.h>

int fatorial(int num);

int main(){
	setlocale(LC_ALL, "Portuguese");
	int v1[5], v2[5], c = 0;
	for(c = 0; c < 5; c++){
		printf("Digite o %dº valor: ", c+1);
		scanf("%d", &v1[c]);
		v2[c] = fatorial(v1[c]);
	}
	printf("\nNúmeros digitados\n");
	for(c = 0; c < 5; c++){
		printf("%d ", v1[c]);
	}
	printf("\nFatoriais dos números\n");
	for(c = 0; c < 5; c++){
		printf("%d ", v2[c]);
        }
	return(0);
}

int fatorial(int num){
	int fat = 1, c = 0;
	for(c = num; c >= 1; c--){fat *= c;}
	return(fat);
}
